<RecipesWindow>
   name:"recipes"
   GridLayout:
      cols:1
      size: root.width, root.height
      GridLayout:
         cols:2
         size_hint:1,0.075
         canvas.before:
            Color:
               rgba: 49/255,235/225,220/225,1
            Rectangle:
               pos: self.pos
               size: self.size

         TextInput:
            padding:5,5
         Image:
            source:"lupa.png"
            size_hint:0.3,0.3
      ScrollView:  
         GridLayout:
            size_hint_y: None
            row_default_height:root.height*0.09
            height:self.minimum_height
            cols: 1
            rows: 8
            Label:
               color:0,0,0,1
               text:"Titulo de la Receta"
               font_size: 40
               text_size: self.size
               halign:"center"
               valign:"center"
               bold:True                
            Image:
               source:"prueba.jpg"
               size_hint_y: None
               height: 200
            GridLayout:
               size_hint_y: None
               row_default_height:root.height*0.02
               height:self.minimum_height
               cols: 2
               rows: 1
               Label:
                  text:"Nivel"
                  color:0,0,0,1
                  font_size: 20
                  text_size: self.size
                  halign:"left"
                  valign:"center"
                  bold:True
               GridLayout:
                  rows:1
                  cols:2
                  size_hint_x:None
                  width:300
                  GridLayout:
                     rows:1
                     cols:5
                     Image:
                        source:"star.png"
                        
                     Image:
                        source:"star.png"
                     Image:
                        source:"star.png"
                     Image:
                        source:"star.png"
                     Image:
                        source:"star.png"
                  Label:
                     canvas.before:
                        Color:
                           rgba: 1,1,1,1
                        Rectangle:
                           pos: self.pos
                           size: self.size
            Label:
               text:"Tiempo de preparacion"
               color:0,0,0,1
               font_size: 20
               text_size: self.size
               halign:"left"
               valign:"center"
               bold:True

                                                                                                                                                                                                                       
      Label:
         text:"Como en casa"
         bold:True
         color:0,0,0,1
         canvas.before:
            Color:
               rgba: 49/255,235/225,220/225,1
            Rectangle:
               pos: self.pos
               size: self.size
         size_hint:1,0.075

         
